{
	"compilerOptions": {
		"rootDir": ".",

		"module": "ESNext",
		"target": "ESNext",

		"moduleResolution": "node",
		"lib": ["es6"],
		"declarationDir": "build",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"inlineSources": true,
		"sourceMap": true
	},
	"exclude": ["node_modules"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
